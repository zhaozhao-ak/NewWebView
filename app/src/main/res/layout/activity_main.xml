<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开系统浏览器" />

        <Button
            android:id="@+id/btn_bridge_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开Bridge浏览器" />

        <Button
            android:id="@+id/btn_xfive_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开X5浏览器" />

        <Button
            android:id="@+id/btn_xfive_bridge_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开X5 + Bridge浏览器" />

        <Button
            android:id="@+id/bit_clearcache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除缓存" />
    </LinearLayout>
</LinearLayout>
